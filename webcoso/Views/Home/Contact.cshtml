@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero-wrap hero-bread" style="background-image: url('/Content/images/banner/laptop-tot-nhat-1638390226558.jpg'); ">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Contact</span></p>
                <h1 class="mb-0 bread">Contact Us</h1>
            </div>
        </div>
    </div>
</div>

<style>
    .info {
        display:flex;
        justify-content:center;
        align-items:center;
        flex-direction:column;
        text-align:center
    }
    .address-position span{
        margin-top:20px;
    }
</style>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <strong>Địa Chỉ</strong>
                    <span> 475A Điện Biên Phủ, Bình Thạnh, TP.HCM</span>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <strong>Hotline</strong>0335.183.057
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <strong>Email</strong><span style="overflow: hidden; text-overflow: ellipsis;"> duongquocan222@gmail.com</span>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info bg-white p-4" style="min-width:255px">
                    <strong>Website</strong> <a href="/">Điện Tử Chính Hãng - ATC</a>
                </div>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h5 style="font-weight:bold;text-align:center;opacity:0.5">Bạn cần giúp đỡ? Hãy liên hệ với chúng tôi.</h5>
                    <div class="form-group">
                        <textarea name="txtNoiDung" id="txtNoiDung" cols="80" rows="7" class="form-control" placeholder="Hãy ghi nội dung bạn cần giúp đỡ"></textarea>
                    </div>
                    <div class="form-group text-right">
                        <input type="submit" value="Gửi" style="font-weight:550;font-size:14px;" class="btn btn-primary py-2 px-4">
                    </div>
                }
            </div>

            <div class="col-md-6 d-flex">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe width="450" height="300" id="gmap_canvas" src="https://maps.google.com/maps?q=Hutech&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>