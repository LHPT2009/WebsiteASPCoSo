                    <li class="nav-item"><a href="@Url.Action("Contact","Home")" class="nav-link">Liên hệ</a></li>
                </ul>

            </div>
            <script>
                Array.from($('.nav-link')).forEach(function (item) {
                    if (item.href.split('/')[3] == window.location.href.split('/')[3] && item.href.split('/')[4] == window.location.href.split('/')[4])
                        item.style = 'color: #ff0000a1 !important';
