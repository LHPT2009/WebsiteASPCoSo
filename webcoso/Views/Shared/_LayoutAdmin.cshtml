        }

            .MenuTrang a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                transition: background-color .3s;
                border: 1px solid #ddd;
            }

                .MenuTrang a.active {
                    background-color: #4CAF50;
