@using webcoso.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="hero-wrap hero-bread" style="background-image: url('/Content/images/banner/laptop-tot-nhat-1638390226558.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>About</span></p>
                <h1 class="mb-0 bread">Login</h1>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @style = "width:500px" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-offset-1">
                    <div class="signup-form">
                        <h2 class="text-center">Đăng nhập</h2>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size: 14px;" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "height:50px" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @style = "height:50px" })
                        </div>
                        <div class="form-group" style="display: flex; align-items: center;">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @style = "margin-bottom: unset;margin-left: 10px;font-size:11px;font-weight: 500;" })
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-blue btn-block" value="Đăng nhập" style="background-color: #44c5ee;" />
                        </div>
                        <div class="text-center">
                            @Html.ActionLink("Đăng ký tài khoản", "Register", routeValues: null, htmlAttributes: new { @class = "btn-outline-info", @style = "margin-top:10px; font-size: 12px; text-decoration:none;" })
                        </div>
                        <div class="text-center">
                            @Html.ActionLink("Quên mật khẩu", "ForgotPassword", routeValues: null, htmlAttributes: new { @class = "btn-outline-info", @style = "margin-top:10px; font-size: 12px; text-decoration:none;" })
                        </div>
                    </div>
                </div>}
            <div class="col-md-offset-1" style="";width:500px;margin-left:52%;">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
            </section>
    </div>
</div>