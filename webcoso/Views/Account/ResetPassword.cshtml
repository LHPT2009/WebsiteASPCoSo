@{
    ViewBag.Title = "Reset password";
}
<div class="hero-wrap hero-bread" style="background-image: url('/Content/images/banner/laptop-tot-nhat-1638390226558.jpg'); ">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>About</span></p>
                <h1 class="mb-0 bread">Register</h1>
            </div>
        </div>
    </div>
</div>
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Mật khẩu mới</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Nhập mật khẩu mới</label>
        <input type="password" name="pass" class="form-control col-md-10" required />
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nhập lại mật khẩu mới</label>
        <input type="password" name="repass" class="form-control col-md-10" required />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>
}

