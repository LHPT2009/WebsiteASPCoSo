@{
    ViewBag.Title = "Reset password";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Mật khẩu mới</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Nhập mật khẩu mới</label>
        <input type="password" name="pass" class="form-control col-md-10" required />
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Nhập lại mật khẩu mới</label>
        <input type="password" name="repass" class="form-control col-md-10" required />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>
}

