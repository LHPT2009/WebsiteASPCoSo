@model webcoso.Models.RegisterViewModel
@using GoogleRecaptchaMvc

@{ ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<style>
    .signup-form {
        background-color: #f3efea;
        padding: 45px;
        border-radius: 5px;
        font-family: 'Raleway', sans-serif;
    }
    input.form-control {
        background: #95f0eb2b !important;
    }
</style>
<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
<div class="hero-wrap hero-bread" style="background-image: url('/Content/images/banner/laptop-tot-nhat-1638390226558.jpg');padding:6em; ">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center justify-content-center d-flex">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @style = "width:500px;" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-offset-1">
                        <div class="signup-form">
                            <h1 class="mb-0 bread">Đăng Ký</h1>
                            <h3 style="color:red; text-align:center; padding-top: 20px">@ViewBag.Thongbao</h3>
                            <hr />
                            @Html.ValidationSummary("", new { @class = "text-danger", @style = "font-size: 14px;" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Họ tên", @style = "height:50px" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @style = "height:50px" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @style = "height:50px" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Nhập lại mật khẩu", @style = "height:50px" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Số điện thoại", @style = "height:50px" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Địa chỉ", @style = "height:50px" })
                            </div>
                            <div>@Html.RecaptchaV2("6LeJ3jogAAAAAGmMJi3Bzqev9W5Nw_blm8_75lL6")</div>
                            <br />
                            <div class="form-group">
                                <input type="submit" class="btn btn-blue btn-block text-center" value="Đăng ký" style="background-color: #44c5ee;font-size:16px" />
                            </div>
                            <div class="form-group text-center">
                                @Html.ActionLink("Đã có tài khoản", "Login", routeValues: null, htmlAttributes: new { @class = "btn-outline-info", @style = "margin-top:10px; font-size: 16px; text-decoration:none;" })
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
        </div>
    </div>
</div>