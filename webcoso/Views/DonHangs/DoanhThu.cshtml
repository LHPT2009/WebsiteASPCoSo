@model webcoso.Models.DoanhThuViewModel
@using PagedList.Mvc
@{ ViewBag.Title = "DoanhThu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <table class="table table-bordered table-dark">
                <h1 style="margin:10px">Doanh thu theo ngày</h1>
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Ngày/Tháng/năm
                        </th>
                        <th>
                            Doanh thu
                        </th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @for (var i = 0; i < Model.ThangNam.Count - 1; i++)
                    {
        <tr>
            <td>
                @Model.ThangNam[i].Day/@Model.ThangNam[i].Month/@Model.ThangNam[i].Year
            </td>
            <td>
                @String.Format("{0:0,0}", @Model.Result[i])
            </td>
        </tr>
}
                </tbody>
            </table>
            <div style=" margin-bottom:50px;">
                <div>
                    Trang @(Model.ThangNam.PageCount < Model.ThangNam.PageNumber ? 0 : Model.ThangNam.PageNumber) / @Model.ThangNam.PageCount
                </div>
                <div class="MenuTrang">
                    @Html.PagedListPager(Model.ThangNam, page => Url.Action("Index", new { page = page }))
                </div>
            </div>
        </div>
    </main>
</div>


