@model PagedList.PagedList<webcoso.Models.DonHang>
@using PagedList.Mvc;
@{ ViewBag.Title = "DoanhThu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <table class="table table-bordered table-dark">
                <h1 style="margin:10px">Doanh thu theo ngày</h1>
                @using (Html.BeginForm("Export", "DonHangs", FormMethod.Post))
                {
                    <input type="submit" value="Xuất Excel" class="btn btn-success">
                }
                <thead class="thead-dark">
                    <tr>
                        <th>
                            Ngày
                        </th>
                        <th>
                            Doanh thu ngày
                        </th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.NgayDat
                            </td>
                            <td>
                                @item.TongTien
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div style=" margin-bottom:50px;">
                <div>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
                <div class="MenuTrang">
                    @Html.PagedListPager(Model, page => Url.Action("DoanhThu", new { page = page }))
                </div>
            </div>
        </div>
    </main>
</div>


