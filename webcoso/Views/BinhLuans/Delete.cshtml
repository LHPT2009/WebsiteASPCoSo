@model webcoso.Models.BinhLuan
@using webcoso.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">

            <h3>Bạn có chắc chắn muốn xóa?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Tên sản phẩm
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SanPham.Ten)
                    </dd>

                    <dt>
                        Nội dung
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NoiDung)
                    </dd>

                    <dt>
                       Tên Khách Hàng
                    </dt>

                    <dd>
                        @{
                            ApplicationUser user = System.Web.HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(Model.MaKH);
                        }
                        @user.Name
                    </dd>

                    <dt>
                        Ngày đăng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NgayTao)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <p>
                            <input type="submit" value="Xóa" class="btn btn-danger" /> |
                            <a class="btn btn-success" href='@Url.Action("Index", "BinhLuans")' style="margin:10px 0px;">
                                Trở về
                            </a>
                        </p>
                    </div>}
            </div>
        </div>
    </main>
</div>


