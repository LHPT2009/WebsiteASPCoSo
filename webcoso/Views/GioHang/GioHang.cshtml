@model IEnumerable<webcoso.Models.GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_MessageAlert")

<div class="hero-wrap hero-bread" style="background: #dad0d057">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Giỏ</a></span> <span>hàng</span></p>
                <h1 class="mb-0 bread">Giỏ hàng của bạn</h1>
            </div>
        </div>
    </div>
    <section class="ftco-section ftco-cart">
        <div class="container">
            @if (Model.Count() != 0)
            {
                <div class="row">
                    <div class="col-md-12 ftco-animate">
                        <div class="cart-list">
                            <table class="table">
                                <thead class="thead-primary">
                                    <tr class="text-center">
                                        <th>&nbsp;</th>
                                        <th>Hình ảnh</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="text-center">
                                            <td class="product-remove"><a href="@Url.Action("XoaGioHang", "GioHang", new { @id = item.MaSP })"><span class="ion-ios-close"></span></a></td>

                                            <td class="image-prod"><div class="img" style="background-image: url(@item.Hinh);"></div></td>

                                            <td class="product-name">
                                                <h3>@Html.DisplayFor(modelItem => item.Ten)</h3>
                                            </td>
                                            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @id = item.MaSP }))
                                            {
                                                <td class="price">
                                                    @String.Format("{0:0,0}", item.Gia) VNĐ
                                                </td>

                                                <td class="quantity">
                                                    <div class="input-group mb-3">
                                                        <input type="number" name="txtSolg" class="quantity form-control input-number" value="@item.SoLuong" min="1" max="100">
                                                    </div>
                                                </td>
                                                <td class="total">
                                                    @String.Format("{0:0,0}", item.ThanhTien) VNĐ
                                                </td>
                                                <td> <input type="submit" value="Cập nhật" class="btn btn-success" /> </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-start">
                    <div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
                        <div class="cart-total mb-3">
                            <h3>Tổng giỏ hàng của bạn</h3>
                            <hr>
                            <p class="d-flex total-price">
                                <span>Tổng Tiền</span>
                                <span>@String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</span>
                            </p>
                        </div>
                        <p class="text-center"><a href="/GioHang/DatHang" class="btn btn-primary py-3 px-4">TIẾN HÀNH THANH TOÁN</a></p>
                    </div>
                </div>
            }
            else
            {
                <div style="display: flex; flex-direction: column;align-items:center">
                    <br />
                    <div>
                        <img src="~/Content/images/shopping-cart-trolley.png" alt="thumbnail" width="300" style="margin: auto" />
                    </div>
                    <h3>Bạn chưa có sản phẩm nào!</h3>
                    <h3 style="margin: 20px auto">
                        <div class="btn btn-secondary" style="padding:20px; font-size:14px">
                            <a class="icon icon-cart-plus" href="@Url.Action("Index","SanPhams")" class="nav-link"> Mua sắm thôi!!!</a>
                        </div>
                    </h3>
                </div>
            }
        </div>
    </section>

</div>



